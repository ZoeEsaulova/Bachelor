  <body>
  <script>
  	jQuery(document).ready(function() {
  		
  		jQuery('#visitMuenster').hide();
  		jQuery('#howLong').hide();
	   jQuery('input[type="radio"]').click(function() {
	       if(jQuery(this).attr('id') == 'muensterYes') {
	            jQuery('#howLong').show();           
	       }

	       else {
	            jQuery('#howLong').hide();   
	       }
	   });
	   jQuery('input[type="radio"]').click(function() {
	       if(jQuery(this).attr('id') == 'muensterNo') {
	            jQuery('#visitMuenster').show();           
	       }

	       else {
	            jQuery('#visitMuenster').hide();   
	       }
	   });
	});
  </script>
    <!-- Navigation bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header" >
          <a class="navbar-brand">Online Survey: Determination of Camera Heading</a>
        </div>
          <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
